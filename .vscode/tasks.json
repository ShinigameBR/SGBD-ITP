{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/CODIGO/main.c",
                "${workspaceFolder}/CODIGO/file.c",
                "${workspaceFolder}/CODIGO/funcs.c",
                "${workspaceFolder}/CODIGO/table.c",
                "-include",
                "${workspaceFolder}/CODIGO/definitions.h",
                "-o",
                "${workspaceFolder}/CODIGO/final",
                "-g",
                "-W"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}